{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <h3>{{ articles.0.category.name }}</h3>
    {% for article in articles %}
        <h5 class="ml-5">{{ article.id }} <a data-toggle="collapse" href="#collapseExample{{ article.id }}" role="button" aria-expanded="false" aria-controls="collapseExample"> {{ article.title }}</a></h5>
        <p class="collapse" id="collapseExample{{ article.id }}">{{ article.content }}</p>
    {% endfor %}



{% endblock %}
